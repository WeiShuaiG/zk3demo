<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.umeng.soexample.zk3demo.fragment.DingFragment">

    <!-- TODO: Update blank fragment layout -->
    <RadioGroup
        android:id="@+id/fragment_order_fourrg"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_102"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/fragment_order_fourbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部订单"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_weight="1"
            android:drawableTop="@mipmap/common_icon_all_list_n_hdpi"
            android:gravity="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/fragment_order_fourbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代付款"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableTop="@mipmap/common_icon_pay_n_hdpi"
            android:gravity="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/fragment_order_fourbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待收货"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:drawableTop="@mipmap/common_icon_receive_n"
            android:layout_weight="1"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/fragment_order_fourbtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待评价"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:layout_weight="1"

            android:drawableTop="@mipmap/commom_icon_comment_n_hdpi"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/fragment_order_fourbtn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/common_icon_finish_n_hdpi"
            android:button="@null"/>
    </RadioGroup>
    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="@dimen/dp_24"
        android:id="@+id/recy_dingdan"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="10dp"
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content" />
</LinearLayout>
