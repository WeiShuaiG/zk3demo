<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umeng.soexample.zk3demo.TijiaoActivity">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/create_add_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="visible"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_60">

            <TextView
                android:id="@+id/name"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="庄周"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="15011445347"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@id/name"
                android:text="北京海淀八维"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/create_address"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/dp_20"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_100">
            <TextView
                android:id="@+id/order_name"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="12313"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/order_phone"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="12313"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:text="广东省。。。。。。。"
                android:id="@+id/order_address"
                android:layout_below="@id/order_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="@dimen/dp_312"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:id="@+id/create_post_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/create_payment"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            android:text="共2件商品，需付款0.00元"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_50" />
        <TextView
            android:id="@+id/create_Submission"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16"
            android:background="#ff5e70"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_50" />
    </LinearLayout>

</RelativeLayout>
