<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.umeng.soexample.zk3demo.fragment.GouFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/query_gwc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:layout_height="@dimen/dp_50">
        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:button="@null"
            android:text="全选"
            android:textColor="#666666"
            android:textColorHint="#666666"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/gou_checked"
            />

        <TextView
            android:text="合计："
            android:layout_marginLeft="80dp"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/gou_heji"
            android:layout_marginLeft="@dimen/dp_120"
            android:textSize="@dimen/sp_16"
            android:textColor="#ff0606"
            android:text="￥0.00"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/js"
            android:layout_alignParentRight="true"
            android:background="#ff5e70"
            android:text="去结算"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_50" />

    </RelativeLayout>


</RelativeLayout>
